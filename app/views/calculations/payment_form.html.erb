<h1> Find your monthly payment </h1>

<form action="/payment/results">
  <div>
    <label for="APR">
      Annual interest rate
    </label>
    <input id="APR" type = "text" name="user_num">
  </div>

  <div>
    <label for="years_remaining_tag">
      Number of years
    </label>
    <input id="years_remaining_tag" type = "text" name="user_num">
  </div>

  <div>
    <label for="Principal">
      Present value
    </label>
    <input id="Principal" type = "text" name="user_num">
  </div>

  <button>Calculate monthly payment</button>
</form>
